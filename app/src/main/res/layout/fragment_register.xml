<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".ui.register.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="318dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/ic_ford_knox_logo_foreground" />

        <TextView
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:ems="16"
            android:inputType="textPersonName"
            android:text="Ford Knox"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/text_color_dark_mode" />

        <LinearLayout
            android:background="@drawable/login_frame_background"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="22dp"
                android:id="@+id/textView3"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_dark_mode"
                android:text="Login" />

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/text_color_dark_mode"
                android:hint="E-Mail:"
                android:textColorHint="@color/text_color_dark_mode"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/text_color_dark_mode"
                android:hint="Password:"
                android:textColorHint="@color/text_color_dark_mode"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/editTextRepeadPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/text_color_dark_mode"
                android:hint="Repead Password:"
                android:textColorHint="@color/text_color_dark_mode"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:text="Register" />

            <TextView
                android:id="@+id/tertiaryLoginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="You have an account ?"
                android:textAlignment="center"
                android:textColor="@color/text_button_blue" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>