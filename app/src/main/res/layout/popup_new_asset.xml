<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="140dp"
    android:layout_width="380dp"
    android:background="@drawable/popup_frame_background"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/addTransactionClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:background="@drawable/ic_close"
        android:layout_alignParentRight="true"/>

    <Spinner
        android:id="@+id/assetSpinnerAdd"
        android:textColor="@color/text_color_dark_mode"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/text_color_dark_mode"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>

    </RelativeLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <EditText
            android:id="@+id/assetAddStock"
            android:layout_margin="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:hint="stock:"
            android:textColor="@color/text_color_dark_mode"
            android:textColorHint="@color/text_color_dark_mode"
            android:background="@drawable/short_key_frame_background"/>

        <EditText
            android:id="@+id/assetAddPrice"
            android:layout_margin="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:hint="Price:"
            android:textColor="@color/text_color_dark_mode"
            android:textColorHint="@color/text_color_dark_mode"
            android:background="@drawable/short_key_frame_background"/>

    </LinearLayout>

    <Button
    android:id="@+id/addAssetPopup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_gravity="bottom"
    android:text="Add Asset"
    android:backgroundTint="@color/new_cyan"/>

</LinearLayout>
