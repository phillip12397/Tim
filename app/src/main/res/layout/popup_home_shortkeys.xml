<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="140dp"
    android:layout_width="380dp"
    android:background="@drawable/login_frame_background"
    android:layout_height="180dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shortkeyID"
            android:text="Food"
            android:textAlignment="center"
            android:layout_margin="8dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_dark_mode"/>

        <ImageButton
            android:id="@+id/shortkeyClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_close" />

    </RelativeLayout>

    <EditText
        android:id="@+id/shortkeyIcon"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:hint="Price:"
        android:textColorHint="@color/text_color_dark_mode"
        android:background="@drawable/shortkey_frame_background"/>

    <Button
        android:id="@+id/shortkeyAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Add"
        android:backgroundTint="@color/new_cyan"/>

</LinearLayout>